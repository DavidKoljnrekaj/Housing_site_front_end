                    @HasInspection.
                </td>
            </tr>

            <tr>        
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-asterisk text-primary"></span>
                        Ground Area                                                
                    </strong>
                </td>
                <td class="text-primary">
                    @GroundArea m
                </td>
            </tr>

            <tr>        
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-asterisk text-primary"></span>
                        Floor Area                                                
                    </strong>
                </td>
                <td class="text-primary">
                    @FloorArea m
                </td>
            </tr>

            <tr>        
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-asterisk text-primary"></span>
                        Price                                               
                    </strong>
                </td>
                <td class="text-primary">
                    @price dkk
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<div id="map-container-google-2" class="z-depth-1-half map-container" style="height: 500px">
